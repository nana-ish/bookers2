<h5>Books#show</h5>
<h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>

  <table>
  <tr>
    <th>Title</th>
    <th>body</th>
    <th colspan="2"></th>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <td><%= book.user_id %></td>
      <td><%= link_to book.title ,book_path%></td>
      <td><%= book.body %></td>
      <td><%= link_to "Edit",edit_book_path(book) %></td>
      <td><%= link_to "Destroy",book_path(book),method: :delete,"data-confirm"=>"本当に消しますか?" %></td>
    </tr>
  <% end %>
 </table>

