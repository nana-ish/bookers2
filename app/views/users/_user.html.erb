<div class="col-md-3">
<!-- 開始_ユーザーの情報一覧  user indexではcurrnt userを表示-->
<h2>User info</h2>
<table class='table'>

  <tbody>

    <tr>
      <%= image_tag user.get_profile_image(62,62) %>
    </tr>

    <tr>
  	  <th>name</th>
  	  <th><%= user.name %></th>
    </tr>

    <tr>
  	  <th>introduction</th>
  	  <th><%= user.introduction %></th>
    </tr>

  </tbody>
</table>
    <div class="row">
      <%= link_to edit_user_path(user.id), class: 'btn btn-outline-secondary btn-block' do %><i class=" fas fa-user-cog"></i> <% end %>
    </div>

<!-- 終了_ユーザーの情報一覧 -->

<!-- 中身が空白だとエラー文が出る。 -->
  <% if @book.errors.any? %>
    <%= @book.errors.count %> errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

<!--<ここで新しい本の投稿を行う>-->
<h2 class="mt-3">New book</h2>

  <%= form_with model: book do |f| %>

  <div class="form-group">
  <div class="book_title">Title</div>
   <%= f.text_field :title, style: "width:100%"%>
   </div>

  <div class="form-group">
  <div class="book_opinion">Opinion</div>
  <%= f.text_area :body, style: "width:100%"%>
  </div>
  <div class="form-group">
   <a><%=f.submit'Create Book',class:"btn btn-success"%></a>
  </div>

  <% end %>

</div>

