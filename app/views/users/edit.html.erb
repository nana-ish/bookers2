<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h1>User info</h1>
<!-- 中身が空白だとエラー文が出る。 -->
  <% if @user.errors.any? %>
    <%= @user.errors.count %> errors prohibited this book from being saved:
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
<!-- form_with部分 -->
  <%= form_with model: @user, url: user_path(@user.id), method: :patch, local: true do |f| %>
    <div class="form-group">
      <label for="inputName">Name</label></br>
      <%= f.text_field :name,style: "width:100%" %></br>
    </div>
    <div class="form-group">
      <label for="inputImage">Image</label></br>
      <%= f.file_field :profile_image %></br>
    </div>
    <div class="form-group">
       <label for="inputIntroduction">Introduction</label></br>
      <%= f.text_area :introduction,style: "width:100%"%><br>
    </div>
    <div class="form-group">
      <%= f.submit "Update User",class: 'btn btn-secondary'%>
    </div>
    <div class="form-group">
      <%= flash[:notice] %>
    </div>
  <% end %>