<%= render 'user', user: @user,book:@book%>
<div class="col-md-8 offset-md-1">
  <h2>Users</h2>
  <!-- 開始_ユーザーの情報一覧 -->
  <table class='table'>
    <tr>
      <th> image </th>
      <th> name  </th>
      <th colspan="1"></th>
    </tr>
   <% @users.each do |user| %>
   <tr>
      <td><%= image_tag user.get_profile_image(40,40) %></td>
    	<td><%= user.name %></td>
    	<td><%= link_to "Show",user_path(user) %></td>
   </tr>
   <% end %>
  </table>
</div>
<!-- 終了_ユーザーの情報一覧 -->