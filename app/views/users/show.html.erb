<%= render 'user', user: @user, book: @book %>
<div class="col-md-8 offset-md-1">
<h2>Books</h2>
<!-- 開始_ユーザーの情報一覧 -->
<table class='table'>
  <tr>
    <th colspan="1"></th>
    <th>Title</th>
    <th> Opinion </th>
  </tr>
 <% @books.each do |book| %>
  <tr>
    <td><%=link_to user_path(book.user) do %>
      <%= image_tag book.user.get_profile_image(40,40) %>
      <% end %>
    </td>
  	<td><%= link_to book.title,book_path(book)%></td>
  	<td><%= book.body %> </td>
  </tr>
 <% end %>
</table>
<!-- 終了_ユーザーの情報一覧 -->
</div>